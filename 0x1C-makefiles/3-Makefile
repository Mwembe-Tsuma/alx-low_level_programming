#Rules
.PHONY: all clean oclean fclean re

#Program to remove
RM = rm -f 

# Compiler
CC = gcc

#Sources
SRC = main.c school.c

OBJ = $(SRC:.c=.o)
NAME = school
all: $(NAME)

$(NAME): $(OBJ)
	$(CC) -o $@ $(OBJ)

clean:
	rm -f $(OBJ) $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean
	$(RM) $(NAME)

re: fclean all
